@model Epizon.Models.Articolo

@{
    ViewData["Title"] = "Create";
}

<h1 class="text-center my-5">Crea articolo</h1>


<hr />
<div class="row">
    <div class="col-md-4 mx-auto">
        <form asp-action="Create" enctype="multipart/form-data">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Titolo" class="control-label"></label>
                <input asp-for="Titolo" class="form-control" />
                <span asp-validation-for="Titolo" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Descrizione" class="control-label"></label>
                <input asp-for="Descrizione" class="form-control" />
                <span asp-validation-for="Descrizione" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Prezzo" class="control-label">Prezzo(€)</label>
                <input asp-for="Prezzo" class="form-control" type="number" />
                <span asp-validation-for="Prezzo" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="TempiDiSpedizione" class="control-label">Tempi di spedizione(in giorni)</label>
                <input asp-for="TempiDiSpedizione" class="form-control" />
                <span asp-validation-for="TempiDiSpedizione" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Categoria" class="control-label"></label>
                <select asp-for="Categoria" class="form-control" asp-items="ViewBag.Categorie"></select>
                <span asp-validation-for="Categoria" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ImmagineCopertina" class="control-label">Immagine di copertina</label>
                <input asp-for="ImmagineCopertina" type="file" class="form-control" />
                <span asp-validation-for="ImmagineCopertina" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Immagine2" class="control-label"></label>
                <input asp-for="Immagine2" type="file" class="form-control" />
                <span asp-validation-for="Immagine2" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Immagine3" class="control-label"></label>
                <input asp-for="Immagine3" type="file" class="form-control" />
                <span asp-validation-for="Immagine3" class="text-danger"></span>
            </div>

            <input type="hidden" asp-for="RivenditoreId" />
            <div class="form-group my-5 text-center">
                <input type="submit" value="Crea" class="btn btn-success" />
            </div>
        </form>
    </div>
</div>

<div class="my-2 text-center">
    <a asp-action="Index" >Ritorna alla lista</a>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
