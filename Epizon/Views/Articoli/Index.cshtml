                @Html.DisplayNameFor(model => model.Rivenditore)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Ordine)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
