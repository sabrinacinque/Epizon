@model IEnumerable<Epizon.Models.Articolo>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>Title</th>
            <th>Description</th>
            <th>Price</th>
            <th>Cover Image</th>
            <th>Image 2</th>
            <th>Image 3</th>
            <th>Shipping Time</th>
            <th>Category</th>
            <th>Seller</th>
            <th>Order</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @item.Titolo
                </td>
                <td>
                    @item.Descrizione
                </td>
                <td>
                    @item.Prezzo
                </td>
                <td>
                    <img src="@item.ImmagineCopertina" alt="Cover Image" width="100" />
                </td>
                <td>
                    <img src="@item.Immagine2" alt="Image 2" width="100" />
                </td>
                <td>
                    <img src="@item.Immagine3" alt="Image 3" width="100" />
                </td>
                <td>
                    @item.TempiDiSpedizione
                </td>
                <td>
                    @item.Categoria
                </td>
                <td>
                    @item.Rivenditore?.Email ?? "N/A"
                </td>
                <td>
                    @item.Ordine?.Id ?? "N/A"
                </td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                    <a asp-action="Details" asp-route-id="@item.Id">Details</a> |
                    <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
