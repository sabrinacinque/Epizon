@model IEnumerable<Epizon.Models.ArticoloViewModel>

@{
    ViewData["Title"] = "Checkout";
}

<h1>Checkout</h1>

<div class="row">
    <div class="col-md-6">
        <h3>Dettagli di Spedizione</h3>
        <form>
            <div class="form-group">
                <label for="nome">Nome</label>
                <input type="text" class="form-control" id="nome" placeholder="Inserisci il tuo nome">
            </div>
            <div class="form-group">
                <label for="indirizzo">Indirizzo</label>
                <input type="text" class="form-control" id="indirizzo" placeholder="Inserisci il tuo indirizzo">
            </div>
            <div class="form-group">
                <label for="città">Città</label>
                <input type="text" class="form-control" id="città" placeholder="Inserisci la tua città">
            </div>
            <!-- Altri campi per il checkout -->
        </form>
    </div>
    <div class="col-md-6">
        <h3>Riepilogo Ordine</h3>
        <ul class="list-group">
            @foreach (var articolo in Model)
            {
                <li class="list-group-item d-flex justify-content-between align-items-center">
                    @articolo.Titolo
                    <span>@articolo.Prezzo €</span>
                </li>
            }
        </ul>
        <h4 class="mt-3">Totale: @Model.Sum(a => a.Prezzo) €</h4>
        <button type="submit" class="btn btn-success mt-3">Conferma Ordine</button>
    </div>
</div>
