@model Epizon.Models.CarrelloViewModel

@{
    ViewData["Title"] = "Checkout";
}

<h1>Checkout</h1>

<div class="row">
    <div class="col-md-8">
        <h2>Riepilogo Ordine</h2>
        <table class="table">
            <thead>
                <tr>
                    <th>Titolo</th>
                    <th>Prezzo</th>
                    <th>Quantità</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var articolo in Model.Articoli)
                {
                    <tr>
                        <td>@articolo.Titolo</td>
                        <td>@articolo.Prezzo €</td>
                        <td>@articolo.Quantità</td>
                    </tr>
                }
            </tbody>
        </table>
        <h4 class="mt-3">Totale: @Model.Totale €</h4>
    </div>

    <div class="col-md-4">
        <h2>Dettagli di Spedizione</h2>
        <p>Nome: @Model.Compratore.Nome</p>
        <p>Cognome: @Model.Compratore.Cognome</p>
        <p>Email: @Model.Compratore.Email</p>
        <p>Indirizzo: @Model.Compratore.Indirizzo</p>
        <p>Telefono: @Model.Compratore.Telefono</p>
        <form asp-action="ConfermaOrdine" method="post">
            <button type="submit" class="btn btn-primary">Conferma Ordine</button>
        </form>
    </div>
</div>
