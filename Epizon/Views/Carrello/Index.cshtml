@model IEnumerable<Epizon.Models.ArticoloViewModel>

@{
    ViewData["Title"] = "Il tuo carrello";
}

<h1>Il tuo carrello</h1>

@if (!Model.Any())
{
    <p>Il tuo carrello è vuoto.</p>
}
else
{
    <div class="table-responsive">
        <table class="table">
            <thead>
                <tr>
                    <th>Immagine</th>
                    <th>Articolo</th>
                    <th>Prezzo</th>
                    <th>Quantità</th>
                    <th>Totale</th>
                    <th>Rimuovi</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var articolo in Model)
                {
                    <tr>
                        <td><img src="~/images/@articolo.ImmagineCopertina" alt="@articolo.Titolo" style="width: 50px;" /></td>
                        <td>@articolo.Titolo</td>
                        <td>@articolo.Prezzo €</td>
                        <td>1</td> <!-- Qui puoi implementare un controllo per la quantità -->
                        <td>@(articolo.Prezzo * 1) €</td>
                        <td>
                            <form asp-action="RimuoviDalCarrello" asp-controller="Carrello" method="post">
                                <input type="hidden" name="id" value="@articolo.Id" />
                                <button type="submit" class="btn btn-danger">Rimuovi</button>
                            </form>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
    <div class="text-right">
        <h3>Totale: @Model.Sum(a => a.Prezzo) €</h3>
        <a href="@Url.Action("Checkout", "Carrello")" class="btn btn-success">Procedi al Checkout</a>
    </div>
}
