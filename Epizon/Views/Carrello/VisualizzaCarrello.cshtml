@model Epizon.Models.CarrelloViewModel

@{
    ViewData["Title"] = "Carrello";
}

<h1>Carrello</h1>

<div class="row">
    <div class="col-md-8">
        <ul class="list-group">
            @foreach (var articolo in Model.Articoli)
            {
                <li class="list-group-item d-flex justify-content-between align-items-center">
                    @articolo.Titolo
                    <span>@articolo.Prezzo</span>
                </li>
            }
        </ul>
        <h4 class="mt-3">Totale: @Model.Totale.ToString("C")</h4>
    </div>
    <div class="col-md-4">
        <a asp-action="Checkout" class="btn btn-success btn-lg mt-3">
            Concludi Ordine
        </a>
    </div>
</div>
