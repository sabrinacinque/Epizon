@model IEnumerable<Epizon.Controllers.CategoriaViewModel>

@{
    ViewData["Title"] = "Home";
}

<h1 class="text-center my-5">Che cosa vuoi comprare?</h1>

<div class="container">
    <div class="row">
        @foreach (var categoria in Model)
        {
            <div class="col-md-3">
                <div class="card mb-4">
                    <a href="@Url.Action("Categoria", "Home", new { categoria = categoria.Nome })">
                        <img src="~/images/@categoria.ImmagineUrl" class="card-img-top" alt="@categoria.Nome" style="height: 300px; object-fit: cover; width: 100%;">
                        <div class="card-body text-center">
                            <h5 class="card-title">@categoria.Nome</h5>
                        </div>
                    </a>
                </div>
            </div>
        }
    </div>
</div>
