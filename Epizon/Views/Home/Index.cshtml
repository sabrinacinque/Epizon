@model Epizon.Controllers.HomeViewModel

@{
    ViewData["Title"] = "Home";
}

<!-- Carosello Articoli Casuali -->
<div class="row">
    <div class="col-12">
        <div id="carouselArticoliCasuali" class="carousel slide" data-bs-ride="carousel">
            <h2 class="text-center my-5" style="color:#992FA6; font-size: 50px;">Best Sellers</h2>

            <div class="carousel-inner text-center">
                @for (int i = 0; i < Model.ArticoliCasuali.Count(); i++)
                {
                    var articolo = Model.ArticoliCasuali[i];
                    <div class="carousel-item @(i == 0 ? "active" : "")">
                        <div class="d-flex justify-content-center">
                            <div class="card" style="width: 300px; border: 2px solid #992FA6;">
                                <img src="~/images/@articolo.ImmagineCopertina" class="card-img-top" alt="@articolo.Titolo" style="height: 300px; object-fit: cover;">
                                <div class="card-body">
                                    <h5 class="card-title">@articolo.Titolo</h5>
                                    <p class="card-text">@articolo.Prezzo €</p>
                                    <a href="@Url.Action("DettaglioArticolo", "Shop", new { id = articolo.Id })" class="btn btn-primary">Vedi Dettagli</a>
                                </div>
                            </div>
                        </div>
                    </div>
                }
            </div>

            <!-- Controlli del carosello -->
            <button class="carousel-control-prev" type="button" data-bs-target="#carouselArticoliCasuali" data-bs-slide="prev">
                <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                <span class="visually-hidden">Previous</span>
            </button>
            <button class="carousel-control-next" type="button" data-bs-target="#carouselArticoliCasuali" data-bs-slide="next">
                <span class="carousel-control-next-icon" aria-hidden="true"></span>
                <span class="visually-hidden">Next</span>
            </button>
        </div>
    </div>
</div>


<h1 class="text-center my-5" style="color:#992FA6; font-size: 100px">Che cosa vuoi comprare?</h1>

<div class="container">
    <div class="row">
        @foreach (var categoria in Model.Categorie)
        {
            <div class="col-12 col-md-6 col-xl-4">
                <div class="card mb-5" style="border: 2px solid #992FA6;">
                    <a href="@Url.Action("Categoria", "Home", new { categoria = categoria.Nome })">
                        <img src="~/images/categorie/@categoria.ImmagineUrl" class="card-img-top" alt="@categoria.Nome" style="height: 300px; object-fit: cover; width: 100%;">
                        <div class="card-body text-center">
                            <h5 class="card-title">@categoria.Nome</h5>
                        </div>
                    </a>
                </div>
            </div>
        }
    </div>
</div>

