@model Epizon.Models.Rivenditore

@{
    ViewData["Title"] = "Profilo Rivenditore";
}

<h1>Profilo Rivenditore</h1>

<div class="row">
    <div class="col-md-8">
        <dl class="row">
            <dt class="col-sm-3">Ragione Sociale</dt>
            <dd class="col-sm-9">@Model.RagioneSociale</dd>

            <dt class="col-sm-3">Nome</dt>
            <dd class="col-sm-9">@Model.Nome</dd>

            <dt class="col-sm-3">Cognome</dt>
            <dd class="col-sm-9">@Model.Cognome</dd>

            <dt class="col-sm-3">Partita IVA</dt>
            <dd class="col-sm-9">@Model.PartitaIva</dd>

            <dt class="col-sm-3">Indirizzo</dt>
            <dd class="col-sm-9">@Model.Indirizzo</dd>

            <dt class="col-sm-3">Città</dt>
            <dd class="col-sm-9">@Model.Citta</dd>

            <dt class="col-sm-3">CAP</dt>
            <dd class="col-sm-9">@Model.CAP</dd>

            <dt class="col-sm-3">Provincia</dt>
            <dd class="col-sm-9">@Model.Provincia</dd>

            <dt class="col-sm-3">Telefono</dt>
            <dd class="col-sm-9">@Model.Telefono</dd>

            <dt class="col-sm-3">PEC</dt>
            <dd class="col-sm-9">@Model.Pec</dd>

            <dt class="col-sm-3">Codice Destinatario</dt>
            <dd class="col-sm-9">@Model.CodiceDestinatario</dd>
        </dl>
        <a asp-action="ModificaProfilo" class="btn btn-primary">Modifica</a>
        <button type="button" class="btn btn-danger" data-bs-toggle="modal" data-bs-target="#deactivateAccountModal">
            Disattiva Account
        </button>
    </div>
</div>

<!-- Modal di conferma per la disattivazione dell'account -->
<div class="modal fade" id="deactivateAccountModal" tabindex="-1" aria-labelledby="deactivateAccountModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="deactivateAccountModalLabel">Conferma Disattivazione Account</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                Sicuro di voler disattivare il tuo account? Questa azione è irreversibile.
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Annulla</button>
                <form method="post" action="@Url.Action("DisattivaAccount", "Rivenditore")">
                    @Html.AntiForgeryToken()
                    <button type="submit" class="btn btn-danger">Disattiva Account</button>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
}
