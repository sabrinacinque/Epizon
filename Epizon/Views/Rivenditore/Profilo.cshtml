@model Epizon.Models.Rivenditore

@{
    ViewData["Title"] = "Profilo Rivenditore";
}

<h1 class="text-center my-5" style="color:#992FA6">Profilo Rivenditore</h1>

<div class="row">
    <div class="offset-2 col-8 py-5" style="border:1px solid black;">
        <dl class="row">
            <dt class="col-sm-6 text-center">Ragione Sociale</dt>
            <dd class="col-sm-6 text-center">@Model.RagioneSociale</dd>

            <dt class="col-sm-6 text-center">Nome</dt>
            <dd class="col-sm-6 text-center">@Model.Nome</dd>

            <dt class="col-sm-6 text-center">Cognome</dt>
            <dd class="col-sm-6 text-center">@Model.Cognome</dd>

            <dt class="col-sm-6 text-center">Partita IVA</dt>
            <dd class="col-sm-6 text-center">@Model.PartitaIva</dd>

            <dt class="col-sm-6 text-center">Indirizzo</dt>
            <dd class="col-sm-6 text-center">@Model.Indirizzo</dd>

            <dt class="col-sm-6 text-center">Città</dt>
            <dd class="col-sm-6 text-center">@Model.Citta</dd>

            <dt class="col-sm-6 text-center">CAP</dt>
            <dd class="col-sm-6 text-center">@Model.CAP</dd>

            <dt class="col-sm-6 text-center">Provincia</dt>
            <dd class="col-sm-6 text-center">@Model.Provincia</dd>

            <dt class="col-sm-6 text-center">Telefono</dt>
            <dd class="col-sm-6 text-center">@Model.Telefono</dd>

            <dt class="col-sm-6 text-center">PEC</dt>
            <dd class="col-sm-6 text-center">@Model.Pec</dd>

            <dt class="col-sm-6 text-center">Codice Destinatario</dt>
            <dd class="col-sm-6 text-center">@Model.CodiceDestinatario</dd>
        </dl>
        <div class="text-center mt-5">
            <a asp-action="ModificaProfilo" class="btn btn-warning mx-2">Modifica</a>
            <button type="button" class="btn btn-danger my-3" data-bs-toggle="modal" data-bs-target="#deactivateAccountModal">
                Disattiva Account
            </button>
        </div>
    </div>
</div>

<!-- Modal di conferma per la disattivazione dell'account -->
<div class="modal fade" id="deactivateAccountModal" tabindex="-1" aria-labelledby="deactivateAccountModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="deactivateAccountModalLabel">Conferma Disattivazione Account</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                Sicuro di voler disattivare il tuo account? Questa azione è irreversibile.
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Annulla</button>
                <form method="post" action="@Url.Action("DisattivaAccount", "Rivenditore")">
                    @Html.AntiForgeryToken()
                    <button type="submit" class="btn btn-danger">Disattiva Account</button>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
}
