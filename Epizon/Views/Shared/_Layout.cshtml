@using System.Security.Claims
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Epizon</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/Epizon.styles.css" asp-append-version="true" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/css/all.min.css" />
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
            <div class="container-fluid">
                <a class="navbar-brand" href="@GetHomeUrl()"><img src="~/images/epizon.jpeg" alt="logo epizon" style="height: 70px;" /></a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">
                        @if (User.Identity.IsAuthenticated)
                        {
                            <li class="nav-item">
                                <span class="nav-link text-dark">Ciao, @User.Identity.Name</span>
                            </li>

                            @if (User.IsInRole("Compratore"))
                            {
                                <li class="nav-item">
                                    <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Index">Home</a>
                                </li>
                                <li class="nav-item">
                                    <a class="nav-link text-dark" asp-area="" asp-controller="Carrello" asp-action="IMieiOrdini">I miei ordini</a>
                                </li>
                                <li class="nav-item">
                                    <a class="nav-link text-dark" asp-area="" asp-controller="Account" asp-action="Profile">Il mio profilo</a>
                                </li>
                            }
                            else if (User.IsInRole("Rivenditore"))
                            {
                                <li class="nav-item">
                                    <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="HomeRivenditore">Home</a>
                                </li>
                                <li class="nav-item">
                                    <a class="nav-link text-dark" asp-area="" asp-controller="Articoli" asp-action="Index">Articoli</a>
                                </li>
                                <li class="nav-item">
                                    <a class="nav-link text-dark" asp-area="" asp-controller="Ordini" asp-action="OrdiniRicevuti">Ordini Ricevuti</a>
                                </li>
                                <li class="nav-item">
                                    <a class="nav-link text-dark" asp-controller="Rivenditore" asp-action="Profilo">Profilo Rivenditore</a>
                                </li>
                            }

                            <li class="nav-item">
                                <form asp-controller="Account" asp-action="Logout" method="post" class="form-inline">
                                    <button type="submit" class="btn btn-link nav-link">Logout</button>
                                </form>
                            </li>
                        }
                        else
                        {
                            <li class="nav-item dropdown">
                                <a class="nav-link dropdown-toggle text-dark" href="#" id="loginDropdown" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                                    Accedi
                                </a>
                                <ul class="dropdown-menu" aria-labelledby="loginDropdown">
                                    <li><a class="dropdown-item" asp-area="" asp-controller="Account" asp-action="LoginRivenditore">Accedi come Rivenditore</a></li>
                                    <li><a class="dropdown-item" asp-area="" asp-controller="Account" asp-action="LoginCompratore">Accedi come Compratore</a></li>
                                </ul>
                            </li>
                            <li class="nav-item dropdown">
                                <a class="nav-link dropdown-toggle text-dark" href="#" id="registerDropdown" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                                    Registrati
                                </a>
                                <ul class="dropdown-menu" aria-labelledby="registerDropdown">
                                    <li><a class="dropdown-item" asp-area="" asp-controller="Account" asp-action="RegisterRivenditore">Registrati come Rivenditore</a></li>
                                    <li><a class="dropdown-item" asp-area="" asp-controller="Account" asp-action="RegisterCompratore">Registrati come Compratore</a></li>
                                </ul>
                            </li>
                        }

                        @if (!User.Identity.IsAuthenticated || User.IsInRole("Compratore"))
                        {
                            <li class="nav-item">
                                <a class="nav-link" href="@Url.Action("VisualizzaCarrello", "Carrello")">
                                    <i class="fas fa-shopping-cart"></i>
                                    Carrello
                                    <span id="numeroProdottiNelCarrello" class="badge bg-primary">0</span>
                                </a>
                            </li>
                        }
                    </ul>
                </div>
            </div>
        </nav>
    </header>
    <main role="main" class="pb-3">
        @RenderBody()
    </main>
    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2024 - Epizon
        </div>
    </footer>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/js/site.js"></script>
    @RenderSection("Scripts", required: false)
    @functions {
        private string GetHomeUrl()
        {
            if (User.Identity.IsAuthenticated)
            {
                var userRole = User.FindFirstValue(ClaimTypes.Role);
                if (userRole == "Rivenditore")
                {
                    return Url.Action("HomeRivenditore", "Home");
                }
            }
            // Default home page URL
            return Url.Action("Index", "Home");
        }
    }

</body>
</html>
